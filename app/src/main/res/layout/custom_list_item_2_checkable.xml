<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/primary_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/primary"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/checkbox_settings"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/secondary_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/secondary"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/checkbox_settings"
        app:layout_constraintTop_toBottomOf="@id/primary_text"/>

    <CheckBox
        android:id="@+id/checkbox_settings"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:checked="false"
        android:clickable="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/primary_text"
        app:layout_constraintBottom_toBottomOf="@id/secondary_text"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>